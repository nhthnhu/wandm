<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/minuteTextView"
                style="@style/WMTextStyleDark"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginBottom="24dp"
                android:gravity="center"
                android:textSize="24sp" />

            <NumberPicker
                android:id="@+id/minuteNumberPicker"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:theme="@style/AppTheme.Picker"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/secondTextView"
                style="@style/WMTextStyleDark"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:textSize="24sp"
                android:layout_marginBottom="24dp"
                android:gravity="center" />

            <NumberPicker
                android:id="@+id/secondNumberPicker"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:theme="@style/AppTheme.Picker"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="32dp">

        <net.steamcrafted.materialiconlib.MaterialIconView
            android:id="@+id/cancelAlarmButton"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:scaleType="center"
            app:materialIcon="close"
            app:materialIconColor="@color/color_white"
            android:layout_gravity="end"
            android:layout_weight="1"/>

        <net.steamcrafted.materialiconlib.MaterialIconView
            android:id="@+id/setAlarmButton"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:scaleType="center"
            app:materialIcon="check"
            app:materialIconColor="@color/color_white"
            android:layout_gravity="end"
            android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>